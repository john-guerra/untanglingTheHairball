blue = #4682b4

.reveal
  font-family 'Quattrocento', sans-serif
  p, ol, ul, li, blockquote
    line-height 1.25em
  p, ol, ul, li, blockquote, pre
    margin-top .75em
    margin-bottom .75em
  h1, h2, h3, h4, h5, h6
    margin-top .25em
    margin-bottom .75em

  h1.demo, h2.demo, h3.demo, h4.demo, h5.demo, h6.demo
    margin-top -0.50em
  ul
    list-style-type circle
  pre
    code
      padding 2em
      word-wrap normal
      &::selection,
      ::selection
        background-color #000
        color blue
      &:focus
        outline none
  blockquote
    border-left .25em solid blue
    box-shadow none
    padding 0 1em
    text-align left
    &:before,
    &:after
      content ''
  iframe.demo
    width 100%
    height 650px
    margin-left -30px
  section
    img
      border none
      box-shadow none
      max-height: 500px;

  #title
    h1, h2, h3, h4, h5, h6
      // text-transform no
      font-family 'Oswald', serif
      // font-weight lighter
      // letter-spacing -.05em
      margin 0
      // margin-top -0.5em
    // h3
      // margin 1.5em 0 1em
    h1
      font-size 3.2em
  img.demo
    max-height 500px

  #comparisonTable
    font-size 0.5em
    td
      width: 33%
  .small
    font-size 80%
  .tiny
    font-size 60%
  .micro
    font-size 30%

  .bottom
    margin-top 35%

  .authors
    font-size 70%

  .left
    // left:-8.33%
    // text-align: left
    float: left
    width:50%
    z-index:-10


  .right
    // left:31.25%
    // top: 75px
    float: right
    // text-align: right
    z-index:-10
    width:50%

  .center
    margin: auto
    display: block

  .logo
    height: 50px

  .headshot
    height: 200px

  .miniheadshot
    height: 1em
    margin: 0 0.2em

  img.circle
    border-radius: 50%;

  .contactInfo
    text-align: right
    a
      font-size: 0.6em

  .red
    color: #e80000;

  img.side
    float:left;
    width:45%;
    padding: 0 5px 0 5px;

  .clear
    clear:both;

  table.networkCube
    td
      margin:0px auto
      width:20%
      text-align:center
    img
      display:block
      margin:auto
